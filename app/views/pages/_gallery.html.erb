<% @albums.each do |album| %>
	<div class="page-header">
		<div class="row">
			<div class="span3">
				<h2><%= album.name.capitalize %></h2>
			</div>
			<div class="span2 offset7">
				<%= link_to "Mai multe", page_path(album), class: "btn btn-large" %>
			</div>
		</div>
	</div>
	<div class="row thumbnails">
		<% album.photos[0..2].each do |photo| %>
			<div class="span4">
				<a href= "<%= image_path photo.url %>" class="thumbnail" >
					<%= image_tag photo.url, alt: photo.name %>
				</a>
			</div>
		<% end %>
	</div>
<% end %>
<%= will_paginate @albums, renderer: BootstrapPagination::Rails, previous_label: "Inainte", next_label: "Urmatoarele" %>
