<div class="container frame_style">
	<div class="row">
		<div class="span4">
			<h2>Toate albumele</h2>
		</div>
		<div class="span2 offset6">
			<br>
			<%= link_to "Sincronizeaza", albums_sync_path, :class => "btn btn-primary" %>
		</div>
	</div>

	
	<table class="table table-hover">
			<thead>
				<tr>
					<th>Nume</th>
					<th>Numar de poze</th>
				</tr>
			</thead>
			<tbody>
				<% @albums.each do |album| %>
				<tr>
					<td><%= album.name %></td>
					<td><%= album.photos.count %></td>
					<td><%= link_to "Vezi toate pozele", album_path(album) %></td>
					<td><%= link_to "Sterge", album_path(album), method: :delete, data: { confirm: "Esti sigur?"} %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

</div>
