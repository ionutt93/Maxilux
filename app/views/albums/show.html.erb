<div class="container admin">
	 	<div class="page-header">
				<h3>Nume: <%= @album.name %></h3>
		</div>
		<table class="table table-hover">
			<thead>
				<tr>
					<th>Imagine</th>
					<th>Nume</th>
					<th>Locatie</th>
				</tr>
			</thead>
			<tbody>
				<% photos = @album.photos.all() %>
				<% photos.each do |photo| %>
				<tr>
					<td>
						<div class="span2"><%= image_tag photo.url %></div>
					</td>
					<td><%= photo.name %></td>
					<td><%= photo.url %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	<%= link_to "Inapoi", albums_path, :class => "btn btn-primary" %>
</div>
